        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">测试</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black000</item><!--测试显示-->
        <item name="android:background">@drawable/shape_dingdan_gray</item><!--测试显示-->
        <item name="android:visibility">visible</item>

    </style>

    <style name="order_detail_bottom_click_tv_commen_style">
        <item name="android:minWidth">96dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">再次发单发单</item><!--测试显示-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black000</item><!--测试显示-->
        <item name="android:background">@drawable/shape_dingdan_blue</item><!--测试显示-->
