<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_alignParentRight="true"
    android:minWidth="90dp"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="@dimen/dp_3"
    android:background="@drawable/shape_jia_jian_bg"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/goods_num_iv_jian"
        android:layout_width="@dimen/dp_25"
        android:layout_height="25dp"
        android:clickable="true"
        android:padding="@dimen/dp_2"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_jian" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <TextView
        android:id="@+id/goods_num_tv_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="number"
        android:lines="1"
        android:minWidth="30dp"
        android:paddingHorizontal="2dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black000"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/goods_num_iv_jia"
        android:layout_width="@dimen/dp_25"
        android:layout_height="25dp"
        android:clickable="true"
        android:padding="@dimen/dp_2"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_jia" />


</LinearLayout>

