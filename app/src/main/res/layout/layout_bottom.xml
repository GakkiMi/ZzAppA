<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:id="@+id/ll_bottom"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/linerlayout_water_selector"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_one_small"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:src="@mipmap/home_select" />

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/linerlayout_water_selector"
        >

        <LinearLayout
            android:id="@+id/ll_two_small"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:src="@mipmap/gouwuche" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textColor="@color/black777"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <TextView
            android:id="@+id/shop_car_bage_tv_number"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/def_red_oval"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"
            android:layout_toRightOf="@+id/ll_two_small"
            android:layout_marginLeft="-20dp"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>




    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/linerlayout_water_selector"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_four_small"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_four"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:src="@mipmap/mine" />

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three"
                android:textColor="@color/black777"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>