<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPageBg"
    tools:context=".activity.mine.MeSetActivity">

    <include layout="@layout/activity_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_update_phonepass"
            style="@style/mineLinearLayout"
            android:background="@drawable/linerlayout_water_selector"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:text="修改手机密码"
                android:textColor="@color/black000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/return_right" />

        </LinearLayout>

        <View
            style="@style/lineView"
            android:layout_marginLeft="@dimen/dp_15"/>

        <LinearLayout
            android:id="@+id/ll_set_password"
            style="@style/mineLinearLayout"
            android:background="@drawable/linerlayout_water_selector"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_paypsw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:text="设置支付密码"
                android:textColor="@color/black000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/return_right" />

        </LinearLayout>

        <View
            style="@style/lineView"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/ll_updata_phonenum"
            style="@style/mineLinearLayout"
            android:background="@drawable/linerlayout_water_selector"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <TextView
                style="@style/mineTextView"
                android:text="更换手机号" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/return_right" />

        </LinearLayout>

        <View
            style="@style/lineView"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_about"
            style="@style/mineLinearLayout"
            android:background="@drawable/linerlayout_water_selector"
            android:clickable="true"
            android:focusable="true">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:text="关于我们"
                android:textColor="@color/black000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/return_right" />

        </LinearLayout>

        <View
            style="@style/lineView"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/ll_check"
            style="@style/mineLinearLayout"
            android:background="@drawable/linerlayout_water_selector"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="检查更新"
                android:textColor="@color/black000"
                android:textSize="15sp" />

            <com.huadingcloudpackage.www.widget.ShapeTextView
                android:id="@+id/my_set_update_tips_stv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                app:shapeType="rectangle"
                app:cornerRadius="@dimen/dp_15"
                app:NormalBgColor="@color/colorRed"
                android:gravity="center"
                android:textSize="10sp"
                android:paddingHorizontal="@dimen/dp_5"
                android:textColor="@color/white"
                android:visibility="gone"
                android:text="New"/>


            <TextView
                android:id="@+id/my_set_update_tv_version_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="V1.0.0"
                android:gravity="end"
                android:textColor="#ff999999"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            style="@style/lineView"
            android:layout_marginLeft="@dimen/dp_15"/>

        <LinearLayout
            android:id="@+id/ll_yszc"
            style="@style/mineLinearLayout"
            android:background="@drawable/linerlayout_water_selector"
            android:clickable="true"
            android:focusable="true">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:text="隐私政策"
                android:textColor="@color/black000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/return_right" />

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_Quit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_kuang_25dp_blue_bg"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>