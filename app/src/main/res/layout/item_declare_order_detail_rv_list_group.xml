<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_order_detail_rv_list_group_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/item_order_detail_rv_list_group_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/dingdan_dianpu"
        android:drawablePadding="5dp"
        android:text="仓库1"
        android:textColor="@color/black000"
        android:textSize="13sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_order_detail_rv_list_group_rv_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/item_order_detail_rv_list_group_rl_freight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="@color/black333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_order_detail_rv_list_group_tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black333"
            android:textSize="13sp"
            tools:text="¥10.00" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_order_detail_rv_list_group_rl_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单备注"
            android:textColor="@color/black333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_order_detail_rv_list_group_tv_order_remark"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/black333"
            android:textSize="13sp"
            tools:text="看大家法律框架flak角度看" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_order_detail_rv_list_group_rl_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/item_order_detail_rv_list_group_tv_amount_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付款"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_order_detail_rv_list_group_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPriceColor"
            android:textSize="13sp"
            tools:text="¥ 132.00" />
    </RelativeLayout>

    <!--  <View
          android:id="@+id/item_order_detail_rv_list_divider"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dividerHeight"
          android:layout_marginTop="10dp"
          android:background="@color/colorDivider" />-->

</LinearLayout>