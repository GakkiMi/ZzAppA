<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_all_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.order.ordercommit.PayOderActivity">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_pay_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerInside"
                android:src="@mipmap/return_write" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="订单支付"
                android:textColor="#fffafafa"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="支付金额"
            android:textColor="#66FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_order_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:text=""
            android:textColor="#fffafafa"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/pay_order_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/shape_fafafa_13dp"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:text="订单号："
            android:textColor="#E6FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:text="支付方式"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_yue_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/selector_pay_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25">

            <TextView
                android:id="@+id/pay_order_tv_yuE"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/img_yu_e_normal"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="余额"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/pay_order_tv_exhibi_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_yue_select"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/item_select_yuanquan_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/pay_order_tv_tip_yuE_buzu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:text="余额不足，请联系客服进行充值~"
            android:textColor="@color/colorPriceColor" />


        <LinearLayout
            android:id="@+id/ll_wx_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/selector_pay_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_wx_pay"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/item_select_yuanquan_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ali_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/selector_pay_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_ali_pay"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="支付宝"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/item_select_yuanquan_bg" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付总额："
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pay_order_bottom_tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/colorPriceColor"
            android:textSize="15sp" />

        <com.huadingcloudpackage.www.widget.ShapeTextView
            android:id="@+id/stv_jiesuan"
            android:layout_width="96dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:NormalBgColor="@color/theme_color"
            app:PressBgColor="@color/colorThemeTransparnet"
            app:cornerRadius="20dp"
            app:shapeType="rectangle" />
    </LinearLayout>
</LinearLayout>