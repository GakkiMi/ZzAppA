<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">


    <TextView
        android:id="@+id/item_logistics_detail_rv_list_tv_data"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="09-03"
        android:textColor="@color/black333"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_logistics_detail_rv_list_tv_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_logistics_detail_rv_list_tv_data"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:text="12：44"
        android:textColor="@color/colorGrayText"
        android:textSize="10sp"
        android:visibility="gone" />


    <View
        android:id="@+id/item_logistics_detail_rv_list_line_top"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/item_logistics_detail_rv_list_iv_status"
        android:layout_alignTop="@id/item_logistics_detail_ll"
        android:layout_alignBottom="@id/item_logistics_detail_rv_list_iv_status"
        android:layout_marginLeft="12dp"
        android:background="@color/colorDivider"
        android:visibility="visible" />

    <View
        android:id="@+id/item_logistics_detail_rv_list_line_bottom"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_logistics_detail_rv_list_iv_status"
        android:layout_alignTop="@+id/item_logistics_detail_rv_list_iv_status"
        android:layout_alignBottom="@+id/item_logistics_detail_ll"
        android:layout_marginLeft="12dp"
        android:background="@color/colorDivider"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/item_logistics_detail_rv_list_iv_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="7dp"
        android:layout_toRightOf="@+id/item_logistics_detail_rv_list_tv_time"
        android:src="@mipmap/wuliu_yunshu"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/item_logistics_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_logistics_detail_rv_list_iv_status"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/item_logistics_detail_rv_list_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333"
            android:textSize="14sp"
            tools:text="待收货" />

        <TextView
            android:id="@+id/item_logistics_detail_rv_list_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black333"
            android:textSize="12sp"
            tools:text="河南省城东风路菜鸟南省河南省郑市瀚海新城东风路菜鸟" />
    </LinearLayout>
</RelativeLayout>