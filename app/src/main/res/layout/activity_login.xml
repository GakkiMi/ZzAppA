<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.huadingcloudpackage.www.activity.login.LoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/login_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />


    </androidx.cardview.widget.CardView>
    
    <ImageView
        android:layout_width="77dp"
        android:background="@drawable/login_title"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="12.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="100dp"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_kuang_5dp_dedede"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
       >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_yonghu" />

        <com.huadingcloudpackage.www.widget.ClearEditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="请输入账户"
            android:maxLength="11"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black000"
            android:textColorHint="@color/color_C1C9D1"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_kuang_5dp_dedede"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pwd" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black000"
            android:textColorHint="#cccccc"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="horizontal">

        <!--android:button="@drawable/selector_login_agree"-->

        <CheckBox
            android:id="@+id/login_cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即表示同意"
            android:paddingLeft="3dp"
            android:paddingBottom="0.5dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:checked="false"
            android:button="@null"
            android:textColor="@color/black999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/yszc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:text="《隐私政策》"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/fwxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:text="《服务协议》"
            android:visibility="gone"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_forget_pwd_yzh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        android:text="忘记密码？"
        android:textColor="@color/theme_color"
        android:textSize="13sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_login_5dp_theme"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:ignore="NewApi,UnusedAttribute" />





</LinearLayout>