<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <RelativeLayout
            android:id="@+id/goods_multiple_spec_unit_big_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/goods_multiple_spec_tv_unit_big_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥33.00" />

            <TextView
                android:id="@+id/goods_multiple_spec_tv_unit_big_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="x4" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/goods_multiple_spec_unit_small_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/goods_multiple_spec_tv_unit_small_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥33.00" />

            <TextView
                android:id="@+id/goods_multiple_spec_tv_unit_small_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="x4" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>