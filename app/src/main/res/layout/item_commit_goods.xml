<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/item_commit_goods_ware_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_cangku"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="仓库1"
        android:textColor="#ff333333"
        android:textSize="13sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewGoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginBottom="@dimen/dp_10"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/ll_choose_dlivery_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="配送方式"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_commit_goods_tv_delivery_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="快递物流"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yunfei"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="运费"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_commit_goods_tv_shipping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="¥10.00"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cangku_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="仓库地址"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_commit_goods_tv_wh_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:minHeight="30dp"
            android:text="郑州市中原区威科郑州市中原区威科姆大厦2楼鲜冷店姆大厦2楼鲜冷店"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ziti_time"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="自提时间"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_commit_goods_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/return_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="2020-07-10   下午"
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_remark"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="订单备注"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_commit_goods_tv_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:hint="请填写相关内容"
            android:minHeight="30dp"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/item_commit_goods_divider_view"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:visibility="visible"
        android:background="@color/colorDivider"/>

</LinearLayout>